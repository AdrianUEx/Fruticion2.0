<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Estilo basico de la aplicacion. Al parecer es obligatorio que este definido y que aparezca en mil sitios, porque si no, la aplicacion no ejecuta-->
    <style name="Theme.Fruticion" parent="Theme.AppCompat.Light.NoActionBar"></style>


    <!--ESTILO TOOLBAR-->
    <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>

        <item name="titleTextColor">@color/marron_oscuro</item>
        <item name="android:backgroundTint">@color/beige</item>
    </style>

    <!-- ESTILO BOTTOMBAR-->
    <style name="BottomNavigationStyle">
        <item name="itemIconTint">@color/marron_oscuro</item>
        <item name="itemTextColor">@color/marron_oscuro</item>
        <item name="android:background">@color/beige</item>

    </style>








</resources>
